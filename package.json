  "license": "MIT",
  "scripts": {
    "dev": "lerna run dev --parallel",
    "build": "lerna run build",
    "bootstrap": "lerna bootstrap",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "chalk": "^4.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
